                    android:layout_height="wrap_content"
                    android:text="م ن – While pronouncing the ending sound of these, bring the vibration to the nose"
                    android:textAlignment="center" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/layout9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewLayout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Makharij # 15, 16"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5Layout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TEMP"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewLayout9"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/img_9" />

                <TextView
                    android:id="@+id/textView2Layout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ف – Tip of the two upper jaw teeth touches the inner part of the lower lip"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView3Layout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ب – Inner part of the both lips touch each other"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView4Layout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="م –  Outer part of both lips touch each other"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView8Layout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="و –  Rounding both lips and not closing the mouth"
