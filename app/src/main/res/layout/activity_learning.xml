                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Makharij # 8, 9, 10"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5Layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tarfiyah"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/img_4" />

                <TextView
                    android:id="@+id/textView2Layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ل  – Rounded tip of the tongue touching the base of the frontal 8 teeth"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView3Layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ن  – Rounded tip of the tongue touching the base of the frontal 6 teeth"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView4Layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ر  – Rounded tip of the tongue and some portion near it touching the base of the frontal 4 teeth"
