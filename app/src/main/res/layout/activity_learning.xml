                <TextView
                    android:id="@+id/textView2Layout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ط د ت – Tip of the tongue touching the base of the front 2 teeth"
                    android:textAlignment="center" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
