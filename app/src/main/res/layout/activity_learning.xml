                    android:id="@+id/imageViewLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/img_3" />

                <TextView
                    android:id="@+id/textView2Layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ج ش ى – Tongue touching the center of the mouth roof"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView3Layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ض   – One side of the tongue touching the molar teeth"
                    android:textAlignment="center" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
