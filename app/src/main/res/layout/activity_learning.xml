                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5Layout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lisaveyah"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/img_6" />

                <TextView
                    android:id="@+id/textView2Layout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ظ  ذ  ث – Tip of the tongue touching the tip of the frontal 2 teeth"
                    android:textAlignment="center" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

